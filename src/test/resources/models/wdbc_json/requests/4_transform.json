{
    "name": "ExecLocalTransformations",
    "description": "step 5, execute transformations",
    "processor": {
        "spi": "RequestProcessor",
        "impl": "ml.shifu.core.di.builtin.processor.LocalTransformRequestProcessor",
        "params": {
            "pathFieldMeta": "src/test/resources/models/wdbc_json/generated/FieldMeta.json",
            "pathInputData": "src/test/resources/data/wdbc/wdbc.data",
            "pathOutput": "src/test/resources/models/wdbc_json/generated/normalized.txt",
            "pathOutputActiveHeader": "src/test/resources/models/wdbc_json/generated/active_header.txt"
        }
    },
    "bindings": [
        {
            "spi": "DataLoader",
            "impl": "ml.shifu.core.di.builtin.dataLoader.CSVDataLoader",
            "params": {
                "pathData": "src/test/resources/data/wdbc/wdbc.data"
            }
        },
        {
            "spi": "Transformer",
            "impl": "ml.shifu.core.di.builtin.transform.DefaultTransformer",
            "params": {
                "transformationOptions": [
                    {
                        "selector": ["diagnosis"],
                        "operations": [{
                            "method": "map",
                            "map": {
                                "M": "1",
                                "B": "0"
                            },
                            "mapMissingTo": "$mean"
                        }]
                    },
                    {
                        "selector": ["$default"],
                        "params": {
                            "method": "ZScore",
                            "stdDevCutOff": "6"
                        }
                    }
                ]


            }
        }
    ]
}